generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  savedSubnets        SavedSubnet[]
  savedIPTools        SavedIPTool[]
  savedNetworkDiagrams SavedNetworkDiagram[]
  scanHistories       ScanHistory[]
}

model SavedSubnet {
  id           String   @id @default(uuid())
  userId       String
  ipAddress    String
  subnetMask   String
  networkClass String?
  result       String
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model SavedIPTool {
  id        String   @id @default(uuid())
  userId    String
  toolType  String
  ipAddress String
  result    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model SavedNetworkDiagram {
  id          String   @id @default(uuid())
  userId      String
  name        String
  description String?
  diagramData String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model ScanHistory {
  id          String   @id @default(uuid())
  userId      String
  targetHost  String
  portRange   String
  openPorts   String
  closedPorts Int
  scanTime    Int
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
